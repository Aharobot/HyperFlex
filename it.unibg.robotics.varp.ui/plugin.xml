<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="VARP Views"
            id="it.unibg.robotics.varp.ui.views">
      </category>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="it.unibg.robotics.varp.ui.perspectives.VARPPerspective"
            icon="icons/vp.ico"
            id="it.unibg.robotics.varp.ui.perspective"
            name="VARP">
         <description>
            Variability Analysis and Resolution Perspective
         </description>
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="it.unibg.robotics.varp.ui.perspective">
         <view
               id="it.unibg.robotics.featuremodels.ui.views.instanceview"
               ratio="0.5"
               relationship="right"
               showTitle="true"
               visible="true">
         </view>
         <view
               id="it.unibg.robotics.featuremodels.ui.views.constraintview"
               ratio="0.5"
               relationship="right"
               showTitle="true"
               visible="true">
         </view>
         <view
               id="org.eclipse.ui.views.PropertySheet"
               minimized="false"
               relationship="right"
               showTitle="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.help.contexts">
      <contexts
            file="contexts.xml">
      </contexts>
   </extension>
   <extension
         id="it.unibg.robotics.varp.wizard"
         point="org.eclipse.ui.newWizards">
      <category
            id="it.robotics.unibg.varp.wizard.category"
            name="Variability Analysis and Resolution">
      </category>
      <wizard
            category="it.robotics.unibg.varp.wizard.category"
            class="it.unibg.robotics.varp.ui.wizards.VARPProjectWizard"
            descriptionImage="icons/vp.ico"
            finalPerspective="it.unibg.robotics.varp.ui.perspective"
            icon="icons/vp.ico"
            id="it.robotics.unibg.varp.wizard.varp.project"
            name="VARP Project"
            project="true">
         <description>
            Variability Analysis and Resolution Project
         </description>
      </wizard>
   </extension>
   <extension
         id="it.unibg.robotics.varp.ui.natures.VARPProjectNature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="it.unibg.robotics.varp.ui.natures.VARPProjectNature">
         </run>
      </runtime>
   </extension>
   <extension
         point="org.eclipse.ui.ide.projectNatureImages">
      <image
            icon="icons/vp_nature.ico"
            id="it.unibg.robotics.varp.ui.natures.VARPProjectNatureImage"
            natureId="it.unibg.robotics.varp.ui.natures.VARPProjectNature">
      </image>
   </extension>

</plugin>
