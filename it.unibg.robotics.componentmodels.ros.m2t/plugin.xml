<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="it.unibg.robotics.componentmodels.ros.m2t.category"
            name="ROS M2T">
      </category>
      <command
            categoryId="it.unibg.robotics.componentmodels.ros.m2t.category"
            id="it.unibg.robotics.componentmodels.ros.m2t.rosLaunch"
            name="Generate Launch File for ROS deployment">
      </command>

   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="it.unibg.robotics.componentmodels.ros.m2t.handler.RosLaunchTransform"
            commandId="it.unibg.robotics.componentmodels.ros.m2t.rosLaunch">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="it.unibg.robotics.componentmodels.menu"
               label="ComponentModels">
            <command
                  commandId="it.unibg.robotics.componentmodels.ros.m2t.rosLaunch"
                  label="Generate Launch File"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="it.unibg.robotics.componentmodels.ros.m2t.menu">
      </menuContribution>
      
   </extension>
   <extension
         point="org.eclipse.epsilon.common.dt.tool">
      <tool
            class="it.unibg.robotics.componentmodels.ros.m2t.tools.CHModTool"
            defaultName="CHModTool">
      </tool>
   </extension>
   <extension
         point="org.eclipse.epsilon.common.dt.tool">
      <tool
            class="it.unibg.robotics.componentmodels.ros.m2t.tools.ConfigFileCreator"
            defaultName="ConfigFileCreator">
      </tool>
   </extension>

</plugin>
