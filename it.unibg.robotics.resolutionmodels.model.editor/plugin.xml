<plugin>

   <extension point="org.eclipse.ui.newWizards">
      <wizard
            id="it.unibg.robotics.resolutionmodels.presentation.resolutionmodelModelWizardID"
            name="%_UI_resolutionmodelsModelWizard_label"
            class="it.unibg.robotics.resolutionmodels.presentation.resolutionmodelsModelWizard"
            category="it.robotics.unibg.varp.wizard.category"
            icon="icons/rm.ico">
         <description>%_UI_resolutionmodelsModelWizard_description</description>
         <selection class="org.eclipse.core.resources.IResource"/>
      </wizard>
   </extension>

   <extension point="org.eclipse.ui.editors">
      <editor
            id="it.unibg.robotics.resolutionmodels.presentation.resolutionmodelEditorID"
            name="%_UI_resolutionmodelsEditor_label"
            icon="icons/rm.ico"
            extensions="resolutionmodel"
            class="it.unibg.robotics.resolutionmodels.presentation.resolutionmodelsEditor"
            contributorClass="it.unibg.robotics.resolutionmodels.presentation.resolutionmodelsActionBarContributor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:common.new.menu?after=it.unibg.robotics.varp.menu.new.separatorModels">
         <command
               commandId="org.eclipse.ui.newWizard"
               icon="icons/rm.ico"
               label="Resolution Model"
               style="push">
            <parameter
                  name="newWizardId"
                  value="it.unibg.robotics.resolutionmodels.presentation.resolutionmodelModelWizardID">
            </parameter>
         </command>
      </menuContribution>
   </extension>

</plugin>
