<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="it.unibg.robotics.resolutionmodel.commands.resolution.rosResolution"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+8">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:it.unibg.robotics.resolutionmodel.ui.menuEntry">
         <command
               commandId="it.unibg.robotics.resolutionmodel.commands.resolution.rosResolution"
               icon="icons/start_task.gif"
               id="ResolveROSModelButton"
               label="Resolve ROS Model"
               style="push"
               tooltip="Resolve ROS Model">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:it.robotics.unibg.featuremodels.commands.resolution.toolbar1">
         <command
               commandId="it.unibg.robotics.resolutionmodel.commands.resolution.rosResolution"
               icon="icons/start_task.gif"
               id="ResolveROSModelButton"
               label="Resolve ROS Model"
               style="push"
               tooltip="Resolve ROS Model">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            categoryId="it.unibg.robotics.resolutionmodel.commands.resolution.category"
            id="it.unibg.robotics.resolutionmodel.commands.resolution.rosResolution"
            name="ROS Resolution Command">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="it.unibg.robotics.resolutionmodel.ros.commands.resolution.handlers.ROSResolutionHandler"
            commandId="it.unibg.robotics.resolutionmodel.commands.resolution.rosResolution">
         <enabledWhen>
            <reference
                  definitionId="it.unibg.robotics.resolutionmodel.ros.commands.resolution.isROSResModelSelected">
            </reference>
         </enabledWhen>
      </handler>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="it.unibg.robotics.resolutionmodel.ros.commands.resolution.isROSResModelSelected">
         <with
               variable="selection">
            <and>
               <count
                     value="1">
               </count>
               <iterate>
                  <test
                        forcePluginActivation="true"
                        property="it.unibg.robotics.resolutionmodel.ros.expressions.resolutionModelType.is_a_ROS_resolution_model">
                  </test>
               </iterate> </and>
         </with>
      </definition>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="it.unibg.robotics.resolutionmodel.ros.commands.resolution.expressions.ROSResolutionModelTypeTester"
            id="it.unibg.robotics.resolutionmodel.ros.expressions.resolutionModelPropertyTester"
            namespace="it.unibg.robotics.resolutionmodel.ros.expressions.resolutionModelType"
            properties="is_a_ROS_resolution_model"
            type="it.unibg.robotics.resolutionmodel.ResolutionModel">
      </propertyTester>
   </extension>

</plugin>
